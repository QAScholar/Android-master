<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/road"
    tools:context="com.example.vitalya.myapplication._2SelectionActivity">

    <TextView
        android:id="@+id/HeaderAdd"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#9FA8DA"

        android:text="Содержание автомобиля"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/costs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/Fuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заправка" />

        <Button
            android:id="@+id/Repairs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ремонт" />

        <Button
            android:id="@+id/Oil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Масло" />

        <Button
            android:id="@+id/Notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заметки" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonMainMenu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Главное меню" />

</LinearLayout>
