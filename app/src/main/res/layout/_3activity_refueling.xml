<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/road"
    tools:context="com.example.vitalya.myapplication._3RefuelingActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textName"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#9FA8DA"
            android:text="Заправка"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="173dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewData"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:text="Дата:"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTextCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/select_date"
                android:inputType="textPersonName"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/textViewMilePrev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Общий пробег:"
                android:textColor="@color/colorPrimary" />
            <EditText
                android:id="@+id/editTextKm2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="введите пробег в километрах"
                android:inputType="number"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textViewMileage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Пробег с последней заправки:"

                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTextKm"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="введите пробег в километрах"
                android:inputType="number"

                android:textSize="12sp" />
            <TextView
                android:id="@+id/textViewFilled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Заправлено:"

                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/editTextL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="литры"
                android:inputType="numberDecimal"
                android:text=""

                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="match_parent"
                android:layout_height="31dp"

                android:text="Цена за 1л:"

                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTextR"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Стоимость заправки"
                android:inputType="numberDecimal"

                android:textSize="12sp" />

            <TextView
                android:id="@+id/textViewCost"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:text="Стоимость:"

                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewRub"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_weight="1"
                android:hint="рублей"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textViewKml100"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:text="Расход литров:"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewKml"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_weight="1"
                android:hint="л/100км"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textViewDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="198dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="Сохранить"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/buttonMainMenu"
            android:layout_width="177dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center"
            android:linksClickable="false"
            android:text="Главное меню"/>
    </LinearLayout>




</LinearLayout>