<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/road"
    android:orientation="vertical"
    tools:context="com.example.vitalya.myapplication._7StatsActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/StatsHeader"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:background="#9FA8DA"
            android:text="Статистика"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="173dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/TotalLitres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Всего заправлено литров"
                android:textColor="@android:color/background_dark" />
            <TextView
                android:id="@+id/TotalKm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Всего пройдено километров"
                android:textColor="@android:color/background_dark"/>
            <TextView
                android:id="@+id/TotalCostsFuel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Всего потрачено на топливо"
                android:textColor="@android:color/background_dark"/>
            <TextView
                android:id="@+id/TotalCostsRepairs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Всего потрачено на ремонт"
                android:textColor="@android:color/background_dark"/>
            <TextView
                android:id="@+id/TotalCostsOil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Всего потрачено на замену масла"
                android:textColor="@android:color/background_dark"/>
            <TextView
                android:id="@+id/TotalCostsFull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Всего потрачено на содержание а/м"
                android:textColor="@android:color/background_dark"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/TotalLitresValue"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="     600 литров"
                android:inputType="textPersonName" />
            <TextView
                android:id="@+id/TotalKmValue"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="     1 000 км"
                android:inputType="textPersonName" />
            <TextView
                android:id="@+id/TotalCostsFuelValue"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="     10 000 рублей"
                android:inputType="textPersonName" />
            <TextView
                android:id="@+id/TotalCostsRepairsValue"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="     1 000 рублей"
                android:inputType="textPersonName" />
            <TextView
                android:id="@+id/TotalCostsOilValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="     4 000 рублей"
                android:inputType="textPersonName" />
            <TextView
                android:id="@+id/TotalCostsFullValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="     20 000 рублей"
                android:inputType="textPersonName" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonMainMenu2"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:linksClickable="false"
        android:text="Главное меню" />

</LinearLayout>
