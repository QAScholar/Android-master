<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/road"
    tools:context="com.example.vitalya.myapplication._1HomeActivity">

    <TextView
        android:id="@+id/HeaderGeneral"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#9FA8DA"
        android:text="Главное меню"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Текущие затраты, руб:"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="17sp"
            android:hint="@string/current_costs"/>


        <TextView
            android:id="@+id/textMileage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Текущий пробег, км"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/editKm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"

            android:textAlignment="center"

            android:hint="@string/current_odometer"/>

        <TextView
            android:id="@+id/textCosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Расход топлива"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lkm"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"

                android:textAlignment="center"
                android:hint="@string/lkm"/>

            <TextView
                android:id="@+id/kml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textAlignment="center"
                android:hint="@string/kml"/>
        </LinearLayout>


        <Button
            android:id="@+id/Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:text="Содержание" />

        <Button
            android:id="@+id/Stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Статистика" />
    </LinearLayout>
    <Button
        android:id="@+id/Reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Обнулить" />

    <TextView
        android:id="@+id/vers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Версия: 0.8"
        android:textAlignment="center" />

</LinearLayout>